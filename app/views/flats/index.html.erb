<div class="section">
  <div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://source.unsplash.com/random');">
    <div class="banner-content">
      <h1>Airbnb clone</h1>
      <p>Learn to code with us in Bali</p>
      <p><%= link_to "start now", flats_path, class: "btn-grey" %></p>
      <p><%= link_to 'see our best flats', top10_flats_path, class: "btn-grey" %></p>
    </div>
  </div>
</div>

<div class="section">
  <div class="container">
    <div class="row">
      <% @flats.each do |flat| %>
      <div class="col-xs-12 col-sm-3">
        <div class="card" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://source.unsplash.com/random');">
          <div class="card-title">
            <h2><%= flat.name %></h2>
            <p> <%= flat.address %></p>
          </div>
          <% if flat.user != current_user%>
          <div class="card-button">
            <button type="button" class="btn-grey" data-toggle="modal" data-target="#exampleModal">
              Book
            </button>


            <!-- Modal -->
            <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
              <div class="modal-dialog" role="document">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                      <span aria-hidden="true">&times;</span>
                    </button>
                  </div>
                  <div class="modal-body">
                    <%= render 'bookings/form', flat: flat, booking: @booking %>
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn-grey">Book now</button>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
        </div>
      </div>
      <% end %>
    </div>
  </div>





