    <div class="container text-center">
      <div class="row">

        <div class="tab-color">
          <h1><a href="#" class="button-js" id="flat"> My flats</a></h1>
          <!--           <div id="flat-content-js"> -->
           <div style="margin-top: 20px"><%= link_to 'Add a new flat', new_flat_path, class: "btn-grey" %></div>
         </div>
         <% @flats.each do |flat| %>
         <div class="col-xs-12 col-sm-4 col-offset-4">
          <div class="card" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://source.unsplash.com/random');">
            <div class="card-title">
              <h2><%= flat.name.capitalize%></h2>
              <p><%= flat.address %></p>

              <% flat.bookings.each do |booking| %>
              <p><%= booking.description %> </p>
              <p><%= booking.status %> </p>
              <% end %>
              <div>
                <div>
                  <p style="margin-bottom: 15px"><%= link_to 'edit', edit_flat_path(flat), class: "btn-white" %></p>
                </div>
                <div >
                  <p><%= link_to 'destroy', flat_path(flat), method: :delete, class: "btn-white" %></p>
                  <div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
      </div>
    </div>
  </div>







