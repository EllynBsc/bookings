<div class="section">
  <div class="container" style="height: 100vh">
    <div class="row">
      <% @flats.each do |flat| %>
      <div class="col-xs-12 col-sm-4">
        <div class="card">
          <div class="card-title">
            <h2><%= flat.name %></h2>
          </div>
          <div class="card-address"
          <p>  <%= flat.address %></p>
        </div>
        <div class="card-button">
          <p> <%= link_to 'book', new_flat_booking_path(flat, @booking), class: "btn-grey" %></p>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>

